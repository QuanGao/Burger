
<li class="list-group-item d-flex justify-content-between align-items-center">

    {{burger_name}}

    {{#unless devoured}}
        <button class="change-devour btn-sm btn-outline-warning" data-id="{{id}}" data-devoured="{{devoured}}">
            Devour me!
        </button>
    {{else}}
        <button class="change-devour btn-sm btn-outline-primary" data-id="{{id}}" data-devoured="{{devoured}}">
            Clear
        </button>   
    {{/unless}}

</li>
